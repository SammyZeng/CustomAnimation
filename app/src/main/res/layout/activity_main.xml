<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zengcanwen.zdyanimation.MainActivity">

   <ImageView
       android:id="@+id/image_view1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/imdrawable"
       android:layout_gravity="center_vertical"/>

   <ImageView
       android:id="@+id/image_view2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/im2drawable"
       android:layout_gravity="center_vertical"
       android:layout_marginTop="100dp"/>

   <ImageView
       android:id="@+id/image_view3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/im3drawable"
       android:layout_gravity="center_vertical"
       android:layout_marginBottom="100dp"/>

   <ImageView
       android:id="@+id/image_view4"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/im4drawable"
       android:layout_gravity="center_vertical|right" />

   <ImageView
       android:id="@+id/image_view5"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/im5drawable"
       android:layout_gravity="center_vertical|right"
       android:layout_marginBottom="100dp"/>

   <ImageView
       android:id="@+id/image_view6"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/im6drawable"
       android:layout_gravity="center_vertical|right"
       android:layout_marginTop="100dp"/>

</FrameLayout>
